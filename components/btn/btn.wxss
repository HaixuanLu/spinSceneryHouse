.btnBox {
  width: 80rpx;
  position: fixed;
  right: 20rpx;
  bottom: 20rpx;
}
.btnBox view {
  width: 80rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50%;
  margin-bottom: 20rpx;
  box-shadow: 0 0 10rpx;
  text-align: center;
  line-height: 80rpx;
  color: #666;
}
.btnBox text {
  font-size: 50rpx;
}