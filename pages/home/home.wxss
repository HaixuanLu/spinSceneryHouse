}

.block3 {
  padding: 20rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
}
.block3 image {
  display: block;
  width: 48%;
  border-radius: 6rpx;
}
.block4 {
  background: #fff;
  margin-top: 20rpx;
}
.block4 .top{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 100rpx;
  border-bottom: 1px solid #ccc;
}
.block4 .top .line{
  margin: 0rpx 15rpx 0 15rpx;
  width: 10%;
  background: #ccc;
  height: 1px;
}
.block4 .bottom {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  
}
.block4 .bottom image {
  width: 48%;
  margin-bottom: 20rpx;
  border-radius: 6rpx;
}